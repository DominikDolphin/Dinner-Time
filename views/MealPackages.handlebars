<div class="HeroSection">
    <img src="/img/hero3.png" alt="Hero picture" style="width:100%">
    <div class="HeroText">Meal packages</div>
</div>



<br><br>
<h1 style="text-align:center">Choose a meal package perfect for you</h1>
<div class="main-container">
    <div class="row">
        {{#each meals}}

        <div class="col-sm-12 col-md-6 col-lg-3">
            <a style="color:inherit" href="/packages?id={{packageID}}">
                <div class="card mb-4 shadow-sm">
                    <img class="card-img-top" src="{{packageImageURL}}" alt="{{packageName}} image">
                    <div class="card-body">
                        <h5 class="card-title">{{packageName}}</h5>
                        <p class="card-text">{{packageDescription}}</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"></li>
                            <li class="list-group-item" style="text-align:center">${{packagePrice}}<br>Meals in Package:
                                {{packageNumberOfMeals}}</li>
                            <li class="list-group-item"></li>
                        </ul>

                    </div>
                </div>
            </a>
        </div>

        <br>
        {{/each}}
    </div>
    <br><br><br><br>
</div>